{
  "name": "devtrack-africa",
  "version": "1.0.0",
  "description": "Project management platform for African developers with local storage, Kanban boards, and analytics",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "verify": "node verify-deployment-ready.js",
    "verify:pwa": "node verify-pwa-readiness.js",
    "deploy": "npm run verify && npm run build",
    "deploy:pwa": "bash scripts/deploy-pwa.sh"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.55.0",
    "lucide-react": "^0.294.0",
    "motion": "^10.16.4",
    "recharts": "^2.8.0",
    "react-slick": "^0.29.0",
    "react-responsive-masonry": "^2.1.7",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "sonner": "^1.3.1",
    "react-beautiful-dnd": "^13.1.1",
    "re-resizable": "^6.9.11",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.2.0",
    "class-variance-authority": "^0.7.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "@tailwindcss/vite": "^4.0.0-alpha.26"
  },
  "keywords": [
    "project-management",
    "developers",
    "africa",
    "react",
    "typescript",
    "local-storage",
    "kanban",
    "analytics",
    "offline-first",
    "pwa"
  ],
  "author": "DevTrack Africa Team",
  "license": "MIT",
  "homepage": "https://devtrack-africa.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/devtrack-africa/devtrack-africa.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}